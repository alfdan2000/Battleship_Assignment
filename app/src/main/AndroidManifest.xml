<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.utep.cs.cs4330.battleship">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".game"
            android:label="@string/title_activity_game"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="edu.utep.cs.cs4330.PLAY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".PlaceYourShips"
            android:label="@string/title_activity_place_your_ships"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="edu.utep.cs.cs4330.PLACE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PvpType"
            android:label="@string/title_activity_pvp_type"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>